---
const { name, description, price, icon } = Astro.props;
---

<article class="flex gap-3 items-start bg-white/40 rounded-xl p-4 shadow-sm font-inter">
  <div class="bg-secondary text-white p-3 rounded-lg flex items-center justify-center">
    <i class={`${icon} text-2xl`}></i>
  </div>
  <div class="flex-1">
    <div class="flex justify-between items-start">
      <h3 class="font-semibold">{name}</h3>
      <span class="font-semibold text-sm text-text">${price}</span>
    </div>
    <p class="text-sm text-text/80">{description}</p>
  </div>
</article>
